<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/lbTop"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal" >

        <com.revenuedepartment.customview.TextViewCustom
            android:id="@+id/txTitleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/txForgotPassword"
            android:textColor="@android:color/black"
            android:textSize="25dp" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbTop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >
        
        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/lang_th_forgetpassword_have_email_label_idcityzen"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        
        <com.revenuedepartment.customview.EditTextCustom
            android:id="@+id/mEditTextForgetPasswordHaveEmailIdcityzen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:hint="@string/lang_th_forgetpassword_have_email_label_idcityzen"
            android:maxLength="17"
            android:singleLine="true"
            android:text="" />
        
        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/lang_th_forgetpassword_have_email_label_birthdate"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        
        <!-- 
        <com.revenuedepartment.customview.EditTextCustom
            android:id="@+id/mEditTextForgetPasswordHaveEmailBirthdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:hint="@string/lang_th_forgetpassword_label_birthdate"
            android:maxLength="17"
            android:singleLine="true"
            android:text="" />
        -->
        
        <DatePicker
        android:id="@+id/mEditTextForgetPasswordHaveEmailBirthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        
        <com.revenuedepartment.customview.ButtonCustom
            android:id="@+id/mbuttonForgotPasswordHaveEmailSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/lang_th_forgetpassword_have_email_button_submit" />
    </LinearLayout>

</LinearLayout>
