<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <com.revenuedepartment.customview.TopBar
        android:id="@+id/Topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="150dp"
            android:text="@string/lang_th_forgetpassword_have_email_label_email"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <com.revenuedepartment.customview.TextViewCustom
            android:id="@+id/mButtonForgotPasswordHaveEmailEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        
        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/lang_th_forgetpassword_no_have_email_step2_detail"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        
        <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:orientation="vertical" >
	        
            <com.revenuedepartment.customview.ButtonCustom
	            android:id="@+id/mButtonForgotPasswordHaveEmailSubmit"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="20dp"
	            android:text="@string/lang_th_forgetpassword_have_email_button_submit" />
            	        
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>