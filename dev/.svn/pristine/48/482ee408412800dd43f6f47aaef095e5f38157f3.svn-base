<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <com.revenuedepartment.customview.TopBar
        android:id="@+id/Topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <com.revenuedepartment.customview.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/label_old_password"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp" >

                    <com.revenuedepartment.customview.ButtonCustom
                        android:id="@+id/btHintPasswordAgain"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_hint"
                        android:text=" " />
                </LinearLayout>
            </RelativeLayout>

            <com.revenuedepartment.customview.EditTextCustom
                android:id="@+id/mEditTextResetNewPassword2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:hint="@string/label_old_password"
                android:inputType="textPassword"
                android:maxLength="8"
                android:singleLine="true"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <com.revenuedepartment.customview.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/lang_th_resetpasswordwithnid_label_newpasswordagain1"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp" >

                    <com.revenuedepartment.customview.ButtonCustom
                        android:id="@+id/btHintPassword"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_hint"
                        android:text=" " />
                </LinearLayout>
            </RelativeLayout>

            <com.revenuedepartment.customview.EditTextCustom
                android:id="@+id/mEditTextResetNewPassword1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:hint="@string/lang_th_resetpasswordwithnid_label_newpasswordagain1"
                android:inputType="textPassword"
                android:maxLength="8"
                android:singleLine="true"
                android:text="" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <com.revenuedepartment.customview.TextViewCustom
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/lang_th_resetpasswordwithnid_label_newpasswordagain1"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="20dp" >

                <com.revenuedepartment.customview.ButtonCustom
                    android:id="@+id/btHintPassword"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_hint"
                    android:text=" " />
            </LinearLayout>
        </RelativeLayout>

        <com.revenuedepartment.customview.EditTextCustom
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|bottom"
            android:hint="@string/lang_th_resetpasswordwithnid_label_newpasswordagain1"
            android:inputType="textPassword"
            android:maxLength="8"
            android:singleLine="true"
            android:text="" />
    </LinearLayout>

    <com.revenuedepartment.customview.ButtonCustom
        android:id="@+id/mbuttonResetPasswordWithNidSubmit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/lang_th_forgetpassword_no_have_email_step2_button_submit" />

</LinearLayout>