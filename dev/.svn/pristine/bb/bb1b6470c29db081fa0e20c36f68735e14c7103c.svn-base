<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>Vulcan Filter</filter-name>
        <filter-class>com.promptnow.framework.vulcan.VulcanServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Vulcan Filter</filter-name>
        <servlet-name>Vulcan</servlet-name>
    </filter-mapping>
    <listener>
        <listener-class>com.promptnow.framework.vulcan.VulcanServletListener</listener-class>
    </listener>
    <listener>
        <description>sessionListener</description>
        <listener-class>
            com.promptnow.framework.vulcan.VulcanServletSessionListener
        </listener-class>
    </listener>
    <servlet>
        <servlet-name>Vulcan</servlet-name>
        <servlet-class>com.promptnow.framework.vulcan.VulcanServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Vulcan</servlet-name>
        <url-pattern>*.service</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/no-content.jsp</location>
    </error-page>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/no-content.jsp</location>
    </error-page>
</web-app>
