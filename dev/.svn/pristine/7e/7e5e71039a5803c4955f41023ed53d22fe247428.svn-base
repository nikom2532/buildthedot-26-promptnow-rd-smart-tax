        <class name="DataMapping">
            <query name="getDeviceTypeID" return="DeviceTypeID">
                <sql><![CDATA[SELECT DEVICE_TYPE_IDS FROM DEVICE_MASTER WHERE DEVICE_TYPE_NAME=? ]]></sql>
