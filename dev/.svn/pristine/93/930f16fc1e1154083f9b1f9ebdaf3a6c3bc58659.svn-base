<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <com.revenuedepartment.customview.TopBar
        android:id="@+id/Topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbTop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >
            
	            <com.revenuedepartment.customview.TextViewCustom
		            android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
		            android:text="@string/lang_th_forgetpassword_no_have_email_step2_label_newpassword"
		            android:textColor="@android:color/black"
		            android:textSize="20dp" />
	            
	            <LinearLayout 
	                android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp" >
	                
		            <com.revenuedepartment.customview.ButtonCustom
		                android:id="@+id/btHintPassword"
		                android:background="@drawable/icon_hint"
		                style="?android:attr/buttonStyleSmall"
		                android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
		                android:text="    " />
	
	            </LinearLayout>
	        </RelativeLayout>
          <com.revenuedepartment.customview.EditTextCustom
              android:id="@+id/mEditTextForgetPasswordNoHaveEmailStep2Password"
              android:background="@drawable/bg_dropdown"
              android:gravity="right"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="@string/lang_th_forgetpassword_no_have_email_step2_label_newpassword"
              android:inputType="textPassword"
              android:maxLength="8"
              android:singleLine="true"
              android:text="" />
        </LinearLayout>

        

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

	            <com.revenuedepartment.customview.TextViewCustom
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/lang_th_forgetpassword_no_have_email_step2_label_newpasswordagain"
		            android:textColor="@android:color/black"
		            android:textSize="20dp" />
	            
	            <LinearLayout 
	                android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp" >
	
		            <com.revenuedepartment.customview.ButtonCustom
		                android:id="@+id/btHintPasswordAgain"
		                android:background="@drawable/icon_hint"
		                style="?android:attr/buttonStyleSmall"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="    " />
		            
	            </LinearLayout>
	            
	        </RelativeLayout>
            
          <com.revenuedepartment.customview.EditTextCustom
              android:id="@+id/mEditTextForgetPasswordNoHaveEmailStep2PasswordAgain"
              android:background="@drawable/bg_dropdown"
              android:gravity="right"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:hint="@string/lang_th_forgetpassword_no_have_email_step2_label_newpasswordagain"
              android:inputType="textPassword"
              android:maxLength="8"
              android:singleLine="true"
              android:text=""
              android:visibility="visible" />
            
        </LinearLayout>
        
        <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:orientation="vertical" >

        <com.revenuedepartment.customview.ButtonCustom
            android:id="@+id/mbuttonForgotPasswordNoHaveEmailStep2Submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            
            android:layout_alignParentBottom="true"
	        android:layout_marginBottom="20dp"
            android:text="@string/lang_th_forgetpassword_no_have_email_step2_button_submit" />
        
        </RelativeLayout>
        
    </LinearLayout>

</LinearLayout>