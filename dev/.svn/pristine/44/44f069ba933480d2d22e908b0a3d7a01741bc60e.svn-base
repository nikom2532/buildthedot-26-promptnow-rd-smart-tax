<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/lbTop"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal" >

        <com.revenuedepartment.customview.TextViewCustom
            android:id="@+id/txTitleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/txForgotPassword"
            android:textColor="@android:color/black"
            android:textSize="25dp" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbTop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >
        
        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/lang_th_forgetpassword_forgetquestion_label_topic"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        
        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/lang_th_forgetpassword_forgetquestion_label_name"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
	        <com.revenuedepartment.customview.EditTextCustom
	            android:id="@+id/mEditTextForgetQuestionThaiName"
	            android:layout_width="300dp"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|bottom"
	            android:hint="@string/lang_th_forgetpassword_forgetquestion_label_name"
	            android:maxLength="17"
	            android:singleLine="true"
	            android:text="" />
        
        	<com.revenuedepartment.customview.ButtonCustom
	            android:id="@+id/btHintThaiName"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" " />
        
        </LinearLayout>
        
        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/lang_th_forgetpassword_forgetquestion_label_sername"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
	        <com.revenuedepartment.customview.EditTextCustom
	            android:id="@+id/mEditTextForgetQuestionThaiSername"
	            android:layout_width="300dp"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|bottom"
	            android:hint="@string/lang_th_forgetpassword_forgetquestion_label_sername"
	            android:maxLength="17"
	            android:singleLine="true"
	            android:text="" />
        
        	<com.revenuedepartment.customview.ButtonCustom
	            android:id="@+id/btHintThaiSername"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" " />
        
        </LinearLayout>
        
        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/lang_th_forgetpassword_forgetquestion_label_fathername"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
	        <com.revenuedepartment.customview.EditTextCustom
	            android:id="@+id/mEditTextForgetQuestionThaiFathername"
	            android:layout_width="300dp"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|bottom"
	            android:hint="@string/lang_th_forgetpassword_forgetquestion_label_fathername"
	            android:maxLength="17"
	            android:singleLine="true"
	            android:text="" />
        
        	<com.revenuedepartment.customview.ButtonCustom
	            android:id="@+id/btHintThaiFathername"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" " />
        
        </LinearLayout>
        
        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/lang_th_forgetpassword_forgetquestion_label_mothername"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
        
        
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
	        <com.revenuedepartment.customview.EditTextCustom
	            android:id="@+id/mEditTextForgetQuestionThaiMothername"
	            android:layout_width="300dp"
	            android:layout_height="wrap_content"
	            android:gravity="center_horizontal|bottom"
	            android:hint="@string/lang_th_forgetpassword_forgetquestion_label_mothername"
	            android:maxLength="17"
	            android:singleLine="true"
	            android:text="" />
	        
	        <com.revenuedepartment.customview.ButtonCustom
	            android:id="@+id/btHintThaiMothername"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text=" " />
	        
	    </LinearLayout>
        
        <com.revenuedepartment.customview.ButtonCustom
            android:id="@+id/mbuttonForgotPasswordHaveEmailSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/lang_th_forgetpassword_step1_button_submit" />
    </LinearLayout>

</LinearLayout>
