<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <com.revenuedepartment.customview.TopBar
        android:id="@+id/Topbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <com.revenuedepartment.customview.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/lang_th_forgetpassword_no_have_email_label_quesetion"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/mEditTextForgetPasswordNoHaveEmailQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lang_th_forgetpassword_no_have_email_label_quesetion" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <com.revenuedepartment.customview.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lang_th_forgetpassword_no_have_email_label_answer"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp" >

                    <com.revenuedepartment.customview.ButtonCustom
                        android:id="@+id/btHintAnswer"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_hint"
                        android:text="    " />
                </LinearLayout>
            </RelativeLayout>

            <com.revenuedepartment.customview.EditTextCustom
                android:id="@+id/mEditTextForgetPasswordNoHaveEmailAnswer"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:hint="@string/lang_th_forgetpassword_no_have_email_label_answer"
                android:singleLine="true"
                android:text="" />
        </LinearLayout>

        <com.revenuedepartment.customview.ButtonCustom
            android:id="@+id/mbuttonForgotPasswordNoHaveEmailSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/lang_th_forgetpassword_step1_button_submit" />

        <com.revenuedepartment.customview.ButtonCustom
            android:id="@+id/mbuttonForgotPasswordNoHaveEmailGotoForgetquesetion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/lang_th_forgetpassword_have_email_goto_forgetquestion" />
    </LinearLayout>

</LinearLayout>